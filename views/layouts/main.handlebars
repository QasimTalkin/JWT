<html lang="en">
  <head>
   <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="/stylesheets/navbarStyles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<nav class="flex align-center">
  <a href="/"><p><span>Sh</span>i<span>nob</span>i</p></a>
  <ul>
    <li class="big-screens">
      <a href="/">Home</a>
      <a href="/serviceRequest">Services</a>
      <a href="/">About Us</a>
      <button class="btn register">Register</button>
      {{!-- if logged in show login button else show logout button --}}
      {{#if loggedIn}}
       <a href="/logout"><button class="btn login"> Log Out </button></a>
      {{else}}
        <a href="/login"><button class="btn login"> Log In</button></a>
      {{/if}}
    </li>
    <li class="small-screens">
      <i class="fa-solid fa-bars"></i>
    </li>
  </ul>
</nav>
  </head>

  <body>
     {{#if loggedIn}}
    <div class="wrapper">
      <div class="jumbotron">
        <h1 class="display-4">Welcome {{userName}} </h1>
        <p class="lead">We are a small team of developers who love to create things for the web.</p>
        <hr class="my-4" />
    {{/if}}
      <main>
        {{{body}}}
      
      {{!-- show all the service request by user as bootstrap cards --}}
    {{#if loggedIn}}
      <section> 
        <h1>Your Service Requests</h1>
        <div class="container">
          <div class="row">
            {{#each serviceRequests}}
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{title}}</h5>
                  <p class="card-text">{{description}}</p>
                  <a href="/serviceRequest/{{id}}" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
    {{/if}}
      </main>
    {{!-- footer at the bottom of the page wit social media links --}}
    {{!-- inline style to push to bottom --}}

    <footer style="position: fixed; bottom: 0; width: 100%;">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <h3>About Us</h3>
            <p>We are a small team of developers who love to create things for the web.</p>
          </div>
          <div class="col-md-4">
            <h3>Contact Us</h3>
            <p>
              <a href="mailto:qasim@gmail.com">mail</a>
              <a href="tel:+111111111111">phone</a>
            </p>
          </div>
          <div class="col-md-4">
            <h3>Follow Us</h3>
            <p>
              <a href="https://www.facebook.com/">Facebook</a>
              <a href="https://www.instagram.com/">Instagram</a>
              <a href="https://www.twitter.com/">Twitter</a>
            </p>
          </div>
        </div>
      </div>
    </footer>

    </div>
  </body>
